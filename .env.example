# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chatvault
DB_USER=chatvault
DB_PASSWORD=your_secure_password_change_me

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_change_me
JWT_EXPIRY=7d

# Upload Configuration
MAX_UPLOAD_SIZE=524288000
UPLOADS_DIR=/var/www/chatvault/uploads
MEDIA_DIR=/var/www/chatvault/media

# Server
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Optional: Email for password reset (leave empty to disable)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
